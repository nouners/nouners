{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "nouns-camp#build": {
      "dependsOn": ["^build"],
      "env": [
        "APP_HOST",
        "APP_PRODUCTION_URL",
        "CAMP_FARCASTER_ACCOUNT_FID",
        "CAMP_FARCASTER_ACCOUNT_PRIVATE_KEY",
        "EDGE_CONFIG",
        "ETHERSCAN_API_KEY",
        "FARCASTER_HUB_HTTP_ENDPOINT",
        "KV_REST_API_TOKEN",
        "KV_REST_API_URL",
        "KV_URL",
        "NEYNAR_API_KEY",
        "NOUNS_SUBGRAPH_URL",
        "PROPDATES_SUBGRAPH_URL",
        "FLOWS_SUBGRAPH_URL",
        "SENTRY_AUTH_TOKEN",
        "SESSION_SEAL_SECRET",
        "TENDERLY_API_KEY",
        "TENDERLY_PROJECT_SLUG",
        "CLOUDFLARE_EDGE_CONFIG_BINDING"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": ["CI_LINT"]
}
